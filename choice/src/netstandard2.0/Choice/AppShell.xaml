<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Choice.AppShell"
       xmlns:pages="clr-namespace:Choice.Pages"
       xmlns:ext="clr-namespace:Choice.Extensions.MarkupExtensions">

    <ShellContent Route="LoginPage"
                  ContentTemplate="{DataTemplate pages:LoginPage}"/>

    <TabBar>
        <Tab Icon="{ext:ImageResource Choice.Resources.services.png}"
             Title="Услуги">
            <ShellContent Route="CategoryPage"
                          ContentTemplate="{DataTemplate pages:CategoryPage}"/>
        </Tab>
        <Tab Icon="{ext:ImageResource Choice.Resources.orders.png}"
             Title="Заказы">
            <ShellContent Route="OrderPage"
                         ContentTemplate="{DataTemplate pages:OrderPage}"/>
        </Tab>
        <Tab Icon="{ext:ImageResource Choice.Resources.chats.png}"
             Title="Чаты">
            <ShellContent Route="ChatPage"
                          ContentTemplate="{DataTemplate pages:ChatPage}"/>
        </Tab>
        <Tab Icon="{ext:ImageResource Choice.Resources.account.png}"
             Title="Аккаунт">
            <ShellContent Route="AccountPage"
                          ContentTemplate="{DataTemplate pages:AccountPage}"/>
        </Tab>
    </TabBar>
    
</Shell>